{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "org.apache.maven.plugins:maven-project-info-reports-plugin",
        "jfrog/setup-jfrog-cli",
        "org.codehaus.mojo:taglist-maven-plugin",
        "github-action"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]

}
